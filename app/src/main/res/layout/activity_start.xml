<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/logoTextView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Analog"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"
            android:textSize="72sp"
            android:gravity="bottom|center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline3" android:textAlignment="center"
            android:textStyle="bold" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.0" android:layout_marginBottom="24dp"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/state_click_camera"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline6"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"/>
    <ImageView
            android:layout_width="150dp"
            android:layout_height="0dp"
            app:srcCompat="@drawable/state_click_thu_vien"
            android:id="@+id/imageView2"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline8"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline3"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.3"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline6"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline7"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.6"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline8"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.65"/>
    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline9"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.85"/>
    <TextView
            android:text="No copyright"
            android:layout_width="0dp"
            android:gravity="center"
            android:textColor="@android:color/white"
            android:layout_height="wrap_content"
            android:id="@+id/copyrightTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:text="Camera"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/cameraTextView"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintTop_toBottomOf="@+id/imageView"
            app:layout_constraintBottom_toTopOf="@+id/guideline7"/>
    <TextView
            android:text="Gallery"
            android:layout_width="0dp"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/galleryTextView"
            android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="@+id/imageView2"
            app:layout_constraintStart_toStartOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/guideline9"
            app:layout_constraintBottom_toTopOf="@+id/guideline9"/>
    <TextView
            android:text="Click to select your picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clickOpenTextView"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="@+id/logoTextView"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/guideline3"
            android:textColor="@android:color/white"
            android:textSize="14sp"/>


</android.support.constraint.ConstraintLayout>
